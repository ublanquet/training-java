<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <!-- ANNOTATIONS POUR L'INJECTION DE DEPENDANCES -->
    <context:annotation-config />

    <!-- ANNOTATIONS POUR LA CREATION DE BEANS VIA ANNOTATIONS -->
    <context:component-scan base-package="controller" />

    <!-- ANNOTATIONS POUR AOP -->
    <!--aop:aspectj-autoproxy /-->
    <bean name="companyDao" class="persistance.dao.DaoCompany" scope="singleton" >
    </bean>
    <bean name="computerDao" class="persistance.dao.DaoComputer" scope="singleton" >
    </bean>


    <bean name="companyService" class="services.CompanyService" scope="singleton">
        <property name="daoC" ref="companyDao"/>
        <property name="daoComputer" ref="computerDao"/>
    </bean>
    <bean name="computerService" class="services.ComputerService" scope="singleton" >
        <property name="daoC" ref="computerDao"/>
    </bean>

    <bean name="dashboard" class="controller.DashboardServlet" scope="prototype" >
        <property name="computerService" ref="computerService"/>
    </bean>


